// returns a char[5] array with the pixel data corresponding to the given char

char* getPixelsFromChar(char cIn) {
  static char c[5] = ""; // "" initializes c with zeros
  switch(cIn) {
    // &&&&&&&&&&&&&&&&&&&&&&&&&&&&&&& lower case letters
    case 'a':
      c[0] = 0b00111000;
      c[1] = 0b00100100;
      c[2] = 0b00010100;
      c[3] = 0b00111100;
      c[4] = 0b00000000;
      break;
    case 'b':
      c[0] = 0b00111111;
      c[1] = 0b00100100;
      c[2] = 0b00100100;
      c[3] = 0b00111000;
      c[4] = 0b00000000;
      break;
    case 'c':
      c[0] = 0b00011000;
      c[1] = 0b00100100;
      c[2] = 0b00100100;
      c[3] = 0b00100100;
      c[4] = 0b00000000;
      break;
    case 'd':
      c[0] = 0b00111000;
      c[1] = 0b00100100;
      c[2] = 0b00100100;
      c[3] = 0b00111111;
      c[4] = 0b00000000;
      break;
    case 'e':
      c[0] = 0b00011100;
      c[1] = 0b00101010;
      c[2] = 0b00101010;
      c[3] = 0b00101100;
      c[4] = 0b00000000;
      break;
    case 'f':
      c[0] = 0b00001000;
      c[1] = 0b11111110;
      c[2] = 0b00001001;
      c[3] = 0b00001001;
      c[4] = 0b00000000;
      break;
    case 'g':
      c[0] = 0b00011000;
      c[1] = 0b10010100;
      c[2] = 0b10010100;
      c[3] = 0b01111100;
      c[4] = 0b00000000;
      break;
    case 'h':
      c[0] = 0b00111111;
      c[1] = 0b00000100;
      c[2] = 0b00000100;
      c[3] = 0b00111000;
      c[4] = 0b00000000;
      break;
    case 'i':
      c[0] = 0b00000000;
      c[1] = 0b00000000;
      c[2] = 0b00111101;
      c[3] = 0b00000000;
      c[4] = 0b00000000;
      break;
    case 'j':
      c[0] = 0b00000000;
      c[1] = 0b10000000;
      c[2] = 0b01111101;
      c[3] = 0b00000000;
      c[4] = 0b00000000;
      break;
    case 'k':
      c[0] = 0b00111111;
      c[1] = 0b00010000;
      c[2] = 0b00011000;
      c[3] = 0b00100100;
      c[4] = 0b00000000;
      break;
    case 'l':
      c[0] = 0b00000000;
      c[1] = 0b00111111;
      c[2] = 0b00100000;
      c[3] = 0b00000000;
      c[4] = 0b00000000;
      break;
    case 'm':
      c[0] = 0b00111100;
      c[1] = 0b00000100;
      c[2] = 0b00111100;
      c[3] = 0b00000100;
      c[4] = 0b00111000;
      break;
    case 'n':
      c[0] = 0b00111100;
      c[1] = 0b00000100;
      c[2] = 0b00000100;
      c[3] = 0b00111000;
      c[4] = 0b00000000;
      break;
    case 'o':
      c[0] = 0b00011000;
      c[1] = 0b00100100;
      c[2] = 0b00100100;
      c[3] = 0b00011000;
      c[4] = 0b00000000;
      break;
    case 'p':
      c[0] = 0b11111100;
      c[1] = 0b00100100;
      c[2] = 0b00100100;
      c[3] = 0b00011000;
      c[4] = 0b00000000;
      break;
    case 'q':
      c[0] = 0b00011000;
      c[1] = 0b00100100;
      c[2] = 0b00100100;
      c[3] = 0b11111100;
      c[4] = 0b00000000;
      break;
    case 'r':
      c[0] = 0b00111100;
      c[1] = 0b00001000;
      c[2] = 0b00000100;
      c[3] = 0b00000000;
      c[4] = 0b00000000;
      break;
    case 's':
      c[0] = 0b00000000;
      c[1] = 0b00100100;
      c[2] = 0b00101010;
      c[3] = 0b00010010;
      c[4] = 0b00000000;
      break;
    case 't':
      c[0] = 0b00000000;
      c[1] = 0b00000100;
      c[2] = 0b00111111;
      c[3] = 0b00000100;
      c[4] = 0b00000000;
      break;
    case 'u':
      c[0] = 0b00011100;
      c[1] = 0b00100000;
      c[2] = 0b00100000;
      c[3] = 0b00111100;
      c[4] = 0b00000000;
      break;
    case 'v':
      c[0] = 0b00000000;
      c[1] = 0b00011100;
      c[2] = 0b00100000;
      c[3] = 0b00011100;
      c[4] = 0b00000000;
      break;
    case 'w':
      c[0] = 0b00011100;
      c[1] = 0b00100000;
      c[2] = 0b00011100;
      c[3] = 0b00100000;
      c[4] = 0b00011100;
      break;
    case 'x':
      c[0] = 0b00100100;
      c[1] = 0b00011000;
      c[2] = 0b00011000;
      c[3] = 0b00100100;
      c[4] = 0b00000000;
      break;
    case 'y':
      c[0] = 0b10001100;
      c[1] = 0b10010000;
      c[2] = 0b10010000;
      c[3] = 0b01111100;
      c[4] = 0b00000000;
      break;
    case 'z':
      c[0] = 0b00100100;
      c[1] = 0b00110100;
      c[2] = 0b00101100;
      c[3] = 0b00100100;
      c[4] = 0b00000000;
      break;
    // &&&&&&&&&&&&&&&&&&&&&&&&&&&&&&& special characters
    case ' ':
      c[0] = 0b00000000;
      c[1] = 0b00000000;
      c[2] = 0b00000000;
      c[3] = 0b00000000;
      c[4] = 0b00000000;
      break;
    case '~':
      c[0] = 0b00010000;
      c[1] = 0b00001000;
      c[2] = 0b00010000;
      c[3] = 0b00001000;
      c[4] = 0b00000000;
      break;
    // &&&&&&&&&&&&&&&&&&&&&&&&&&&&&&& default
    default:
      c[0] = 0b11111111;
      c[1] = 0b10000001;
      c[2] = 0b10000001;
      c[3] = 0b10000001;
      c[4] = 0b11111111;
      break;
  }
  return c;
}

